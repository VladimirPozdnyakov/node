<div
  class="modal fade"
  id="register"
  tabindex="-1"
  aria-labelledby="registerModal"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fs-5" id="registerModal">Зарегистрироваться</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="container row socials">
          <div class="yandex col">
            <a href="/auth/yandex">
              <i class="fa-brands fa-yandex fa-2xl" style="color: #000000"></i>
            </a>
          </div>
          <div class="google col">
            <a href="/auth/google">
              <i class="fa-brands fa-google fa-2xl" style="color: #000000"></i>
            </a>
          </div>
          <div class="github col">
            <a href="/auth/github">
              <i class="fa-brands fa-github fa-2xl" style="color: #000000"></i>
            </a>
          </div>
        </div>
        <form
          action="/register"
          class="container"
          id="registerForm"
          method="post"
        >
          <div class="row my-3">
            <div class="col-sm-7 сol-12">
              <div class="form-floating">
                <input
                  name="name"
                  type="text"
                  class="form-control"
                  id="floatingTextarea"
                  placeholder="имя фамилия"
                />
                <label for="floatingTextarea">Введите своё имя и фамилию</label>
              </div>
            </div>
          </div>
          <div class="row my-3">
            <div class="col-sm-8 col-12">
              <div class="form-floating">
                <input
                  type="email"
                  class="form-control"
                  id="floatingInput"
                  name="email"
                  placeholder="name@example.com"
                />
                <label for="floatingInput"
                  >Введите адрес электронной почты</label
                >
              </div>
            </div>
          </div>
          <div class="row my-3">
            <div class="col-sm-8 col-12">
              <div class="form-floating">
                <input
                  name="age"
                  type="number"
                  class="form-control"
                  id="floatingAge"
                  placeholder="age"
                />
                <label for="floatingAge">Введите Ваш полный возраст</label>
              </div>
            </div>
          </div>
          <div class="row my-3">
            <div class="col-sm-5 col-12">
              <div class="form-floating">
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  id="floatingPassword"
                  placeholder="password"
                />
                <label for="floatingPassword">Введите пароль</label>
              </div>
            </div>
          </div>
          <div class="row my-3">
            <div class="col-sm-6 col-12">
              <button type="submit" class="btn btn-success">
                Зарегистрироваться
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
